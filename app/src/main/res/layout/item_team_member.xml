<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_team_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_team_head"
            android:text="诸葛光明"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_team_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_team_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_team_name"
            android:textColor="@color/red"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_team_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_team_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_team_head"
            android:text="未绑定"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_team_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_team_name"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="20:30"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_team_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_team_time"
            android:layout_alignTop="@+id/tv_team_state"
            android:text="贡献赏金：￥200"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>
