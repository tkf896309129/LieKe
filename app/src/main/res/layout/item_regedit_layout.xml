<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_regedit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_regedit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/head_img" />

        <TextView
            android:id="@+id/tv_login"
            style="@style/LoginRegeditTextsStyle"
            android:text="登录"/>

        <RelativeLayout
            android:id="@+id/ll_regedit_phone"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_above="@+id/btn_regedit"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tv_regedit_china"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="#000000"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_regedit_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_regedit_china"
                android:background="@drawable/edittext_bg"
                android:hint="输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_login_line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/et_regedit_phone"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/et_regedit_psw"
                android:layout_marginTop="3dp"
                android:text="密码"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_regedit_psw"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/et_regedit_phone"
                android:layout_below="@+id/et_regedit_phone"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_bg"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_regedit_line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/et_regedit_psw"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/et_regedit_code"
                android:layout_marginTop="3dp"
                android:text="团队码"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_regedit_code"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/et_regedit_phone"
                android:layout_below="@+id/et_regedit_psw"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_bg"
                android:hint="请输入团队码"
                android:inputType="textPassword"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_regedit_line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/et_regedit_code"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_regedit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_bg"
            android:text="注册"
            android:textColor="@color/buttonColor" />
    </RelativeLayout>
</LinearLayout>
